<div class="authorName"><%= @post.author.name %></div>
<a href="#" class="js-next" data-id="<%=@post.id%>">Next...</a>
<h1 class="postTitle"><%= @post.title %></h1>
<p class="postBody"><%= @post.description %></p>


<script type="text/javascript" charset="utf-8">
  $(function(){
    $(".js-next").on("click", function(){
      var nextId = $(this).data("id") + 1;
      $.get('/posts/' + nextId + '/data', function(data){
        $(".authorName").html(data["author"]["name"])
        $(".postTitle").html(data["title"])
        $(".postBody").html(data["description"])
      })
    })
  })
</script>
